<% flash.each do |level, text| %>
  <div class="container pt-3 " role="alert">
    <div class="alert alert-<%= flash_class(level) %> alert-dismissible fade show mb-0">
      <%= text %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
<% end %>
