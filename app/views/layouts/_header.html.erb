<div class="container">
  <div class="d-flex flex-wrap justify-content-center py-2">
    <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
      <span class="fs-4">Chats</span>
    </a>

    <ul class="nav nav-pills">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to 'Sign out', destroy_user_session_path, data: { 'turbo-method': :delete }, class: 'nav-link' %>
        </li>
      <% else %>
        <li class="nav-item"><%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %></li>
        <li class="nav-item"><%= link_to 'Sign up', new_user_registration_path, class: 'nav-link' %></li>
      <% end %>
    </ul>
  </div>
</div>
